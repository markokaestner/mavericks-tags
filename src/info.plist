RANDOM=$(date +%s)
QUERY="{query}"
FILES=$(getPref "file" 0)

addResult "${RANDOM}" "add ${QUERY#add }" "Add Tag ${QUERY#add }" "Enter Tag Name" "add.png" "yes" ""

OLDIFS="$IFS"
IFS='	'
for F in ${FILES[*]}; do
	FILENAME="${F##*/}"
	ICON="info.png"
	EXT="${F##*.}"
	if [ "emlx" = "$EXT" ]; then
		FILENAME=$(mdls "$F" |grep kMDItemDisplayName | cut -d '"' -f 2)
		ICON="mail.png"
	fi
	addResult "${RANDOM}" "" "$FILENAME" "${F%/*}" "$ICON" "no" ""

	FILETAGS=$(./tag -N -l "$F" | sed 's/,/	/g')
	TAGLIST=( $FILETAGS )
	for T in "${TAGLIST[@]}"; do 
		addResult "${RANDOM}" "del $T|$F" "$T" "Delete Tag" "del.png" "yes" ""
	done
done

IFS="$OLDIFS"

getXMLResults</string>
