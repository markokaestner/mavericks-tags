QUERY="{query}"
FUNC=${QUERY:0:3}
REST=${QUERY:4}

TAG=${REST%%|*}
USERFILE=${REST#*|}

FILES=$(getPref "file" 0)

if [ -z "$TAG" ]; then
	/usr/bin/osascript -e "tell application \"Alfred 2\" to search \".tag ${QUERY%%|*}\""
else
	case "$FUNC" in
		add)
			MSG="Tag $TAG added to file(s):"
			OLDIFS="$IFS"
			IFS='	'
			for F in ${FILES[*]}; do
				./tag -a $TAG "$F" 2&gt;&amp;1 | tee workflow.log
				MSG="$MSG ${F##*/}"
			done
			IFS="$OLDIFS"
			echo "$MSG"
			;;
		del)
			./tag -r $TAG "$USERFILE" 2&gt;&amp;1 | tee workflow.log
			echo "Tag $TAG removed from file ${USERFILE##*/}"
			;;
	esac
	/usr/bin/osascript -e "tell application \"Alfred 2\" to search \".tag\""
fi</string>
